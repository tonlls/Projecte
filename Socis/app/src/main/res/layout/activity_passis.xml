<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:rowCount="2"
    android:columnCount="2">
    <android.support.v7.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@+id/pasList"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2">
    </android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/atraccions"
        android:layout_column="0"
        android:layout_row="1"
        android:orientation="vertical">

    </android.support.v7.widget.RecyclerView>
    <ImageView android:id="@+id/qr" android:visibility="invisible" android:layout_column="1" android:layout_row="1"/>
    <Button android:text="ShowQR" android:id="@+id/show_qr" android:layout_column="1" android:onClick="showQR" android:visibility="invisible"/>
</GridLayout>